 #include <iostream>
using namespace std;

//DECLARING A FUNCTION always before 'int main'
//TWO TYPES OF FUNCTION - 1. THAT RETURNS SOMETHUNG  2. DOESNT RETURN ANYTHING

//1. type
int sum(int a, int b);

//2. type
void introduceMe(string fname, string lname, int age);

int main() {
//  INVOKING OR CALLING A FUNCTION DONE INSIDE INT MAIN

cout<<sum(60,40)<<endl;
cout<<sum(60,40)<<endl;
cout<<sum(60,40)<<endl;
introduceMe("rujuta","batavia",20);
introduceMe("Jodie","Comer",27);
introduceMe("Stephen","Curry",32);
}

//DEFINING BOTH FUNCTIONS ALWAYS DONE OUTSIDE INT MAIN
//1. type
int sum(int a, int b){
    return a+b;
}

//2. type
void introduceMe(string fname, string lname, int age){
    cout<<"My name is "<<fname<<" "<<lname<<endl;
    cout<<"I am "<<age<<" years old"<<endl;
}
